    <script>
        $(document).ready(function() {
            var currentPubkeys = [];
            var allPubkeys = [];

            // Fetch pubkeys and names from the Flask backend
            $.getJSON('/api/pubkeys', function(data) {
                allPubkeys = data;
                var availablePubkeysTable = $('.available-pubkeys-table tbody');
                data.forEach(function(item) {
                    var row = $('<tr>');
                    row.append($('<td>').html(`<input type="checkbox" name="pubkey-checkbox" value="${item.pubkey}">`));
                    row.append($('<td>').text(item.name || item.pubkey));
                    row.append($('<td>').text(item.pubkey));
                    row.append($('<td>').text(item.vote_account_pubkey)); 
                    availablePubkeysTable.append(row);
                });
                updateSelectionCounter();
            });

            var chart; // Declare chart variable outside the fetchData function

            // Fetch data from the Flask backend
            function fetchData(pubkeys) {
                console.log('Debug: Fetching data for pubkeys:', pubkeys);
                const urlString = `/api/validators_data?pubkeys=${pubkeys.join(',')}`;
                console.log('Debug: URL String:', urlString);

                $.getJSON(urlString, function(data) {
                    console.log('Debug: Received data:', data);

                    // Check if data is empty
                    if (data.length === 0) {
                        console.log('Debug: No data received from the backend.');
                        return;
                    }

                    // Get a unique set of epochs from the data
                    const epochs = Array.from(new Set(data.map(item => item.epoch)));
                    const labels = epochs.map(epoch => `Epoch ${epoch}`).reverse();

                    const datasets = [];
                    const pubkeysData = {};
                    const epochCreditsAverage = Array(epochs.length).fill(null); // Initialize epochCreditsAverage with nulls

                    data.forEach(function(item) {
                        const pubkey = item.pubkey;
                        if (!pubkeysData[pubkey]) {
                            pubkeysData[pubkey] = {
                                pubkey: pubkey,
                                name: item.name,
                                epochCredits: Array(epochs.length).fill(null), // Initialize with nulls
                                icon_url: item.icon_url,
                                website: item.website,
                                vote_account_pubkey: item.vote_account_pubkey
                            };
                        }
                        const epochIndex = epochs.indexOf(item.epoch);
                        pubkeysData[pubkey].epochCredits[epochIndex] = item.epoch_credits;
                        if (epochCreditsAverage[epochIndex] === null) {
                            epochCreditsAverage[epochIndex] = item.epoch_credits_average;
                        }
                    });

                    for (const pubkey in pubkeysData) {
                        const dataset = {
                            type: 'bar',
                            label: pubkeysData[pubkey].name
                                ? `${pubkeysData[pubkey].name.slice(0, 20)}${pubkeysData[pubkey].name.length > 20 ? '...' : ''}`
                                : `${pubkeysData[pubkey].pubkey.slice(0, 20)}...`,
                            data: pubkeysData[pubkey].epochCredits.reverse(),
                            backgroundColor: generateRandomColor(),
                            borderColor: 'rgba(0, 0, 0, 1)',
                            borderRadius: 5,
                            borderWidth: 1
                        };
                        datasets.push(dataset);
                    }

                    updateChart(labels, datasets, pubkeys.join(', '), epochCreditsAverage.reverse());

                    // Update the legend table
                    updateLegendTable(data);
                })
                .fail(function(jqXHR, textStatus, errorThrown) {
                    console.log('Debug: Error fetching data:', textStatus, errorThrown);
                    console.log('Debug: Response:', jqXHR.responseText);
                });
            }

            function updateChart(labels, datasets, pubkeys, epochCreditsAverage) {
                if (chart) {
                    chart.destroy(); // Destroy the previous chart instance
                }

                var ctx = document.getElementById('validator-chart').getContext('2d');
                chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: datasets.concat([
                            {
                                type: 'line',
                                label: 'Epoch Credits Average',
                                data: epochCreditsAverage,
                                borderColor: 'rgba(153, 102, 255, 1)',
                                borderWidth: 2,
                                fill: false,
                                cubicInterpolationMode: 'monotone',
                                tension: 0.4,
                                order: 2 // Set a higher order to draw the line on top of the bars
                            }
                        ])
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                ticks: {
                                    callback: function(value, index, values) {
                                        var label = this.getLabelForValue(value);
                                        if (label.length > 20) {
                                            return label.substr(0, 20) + '...';
                                        }
                                        return label;
                                    }
                                }
                            },
                            y: {
                                beginAtZero: true
                            }
                        },
                        plugins: {
                            title: {
                                display: false,
                                text: `Historical Rewards for Validators (${pubkeys})`,
                                font: {
                                    size: 18,
                                    weight: 'bold'
                                }
                            }
                        }
                    }
                });
                // Scroll to the top of the page
                $('html, body').animate({
                    scrollTop: 0
                }, 'slow');
            }

            function updateLegendTable(data) {
                const legendTable = $('.legend-table tbody');
                legendTable.empty();

                if (data.length > 0) {
                    // Create an object to store unique rows
                    const uniqueRows = {};

                    data.forEach(function(item) {
                        const rowKey = `${item.pubkey}_${item.epoch}`;
                        if (!uniqueRows[rowKey]) {
                            const row = $('<tr>');
                            row.append($('<td>').text(`Epoch ${item.epoch}`));
                            row.append($('<td>').html(`<img src="${item.icon_url}" height="24" width="24">`));
                            row.append($('<td>').text(item.name));
                            row.append($('<td>').html(`<a href="${item.website}" target="_blank">${item.website || 'N/A'}</a>`));
                            row.append($('<td>').text(item.pubkey));
                            row.append($('<td>').text(item.vote_account_pubkey));
                            row.append($('<td>').text((item.avg_fee_rewards / 1e9).toFixed(5)).addClass('validator-avg-rewards'));
                            row.append($('<td>').text(item.version));
                            row.append($('<td>').text(item.epoch_credits).addClass('validator-epoch-credits'));
                            row.append($('<td>').text(item.epoch_credits_average).addClass('epoch-credits-average'));
                            row.append($('<td>').text(item.activated_stake));
                            row.append($('<td>').text(item.skip_rate));
                            row.append($('<td>').text((item.epoch_average_rewards / 1e9).toFixed(5)).addClass('overall-epoch-avg-rewards'));
                            row.append($('<td>').text(item.validator_block_count).addClass('validator-blocks'));
                            row.append($('<td>').text(item.epoch_block_count).addClass('total-blocks'));
                            uniqueRows[rowKey] = row;
                            legendTable.append(row);
                        }
                    });
                } else {
                    console.log('Debug: No data to display in the legend table.');
                }
            }

            function generateRandomColor() {
                return 'rgba(' + Math.floor(Math.random() * 256) + ',' + Math.floor(Math.random() * 256) + ',' + Math.floor(Math.random() * 256) + ', 0.8)';
            }

            function updateSelectionCounter() {
                const selectedPubkeys = $('input[name="pubkey-checkbox"]:checked').map(function() {
                    return $(this).val();
                }).get();
                $('#selection-counter').text(`(${selectedPubkeys.length} selected)`);
            }

            // Check if pubkeys are provided in the URL
            var urlParams = new URLSearchParams(window.location.search);
            var urlPubkeys = urlParams.getAll('pubkeys');

            if (urlPubkeys.length > 0) {
                console.log('Debug: Pubkeys provided in URL:', urlPubkeys);
                currentPubkeys = urlPubkeys;
                fetchData(currentPubkeys);
            } else {
                var defaultPubkeys = [
                'CAojE3viHrDjTdm3PLVMaAFnxbq4eyjHx2W6QdzBaruN',
                '7y5VhV4fkz6r4zUmH2UiwPjLwXzPL1PcV28or5NWkWRL',
            '5ZjxMYBbnKd4VFxLjAChSWMTeQ96147HnxZvQJxUseHV',
            'CVvaeDPR2o7P1eawG5c9TPFLzSXAewwPovPmREaEL4Cm',
            'DB7DNWMVQASMFxcjkwdr4w4eg3NmfjWTk2rqFMMbrPLA',
            'Fire6ZGPLaqBBGWXC8PgweVjREVXRhwzgRNkdGs1wfQM',
            'Atom7LRkdXj6MBoWJPgjaetrCMrgB9nnkQBYXTWE8Z3S',
            'Frog1Fks1AVN8ywFH3HTFeYojq6LQqoEPzgQFx2Kz5Ch',
            'Diman2GphWLwECE3swjrAEAJniezpYLxK1edUydiDZau',
            'C1ocKDYMCm2ooWptMMnpd5VEB2Nx4UMJgRuYofysyzcA',
            'Cogent51kHgGLHr7zpkpRjGYFXM57LgjHjDdqXd4ypdA',
            'KBoNKoxPjdEmR4TrV9wH9wi96x9vSAs9NET94h91SGJ',
            'PULSARKCJTG5xMoJTxaKHtVzr9H4Kv84haZnnewArAG',
            'EReBoRDj5Lv9y1FGPXxFCt1KAgZeKqa8zJNZvkoA4Uoa',
            'D4r6Rcua2L7nHHhdaiZe2k2bTfPg2WQqcNYpG6bugvCG',
            'Ninja1spj6n9t5hVYgF3PdnYz2PLnkt7rvaw3firmjs',
            'Tri1F8B6YtjkBztGCwBNSLEZib1EAqMUEUM7dTT7ZG3',
                ];
                console.log('Debug: Using default pubkeys:', defaultPubkeys);
                currentPubkeys = defaultPubkeys;
                fetchData(currentPubkeys);
            }

            // Handle "Compare" button click
            $('#compare-btn').on('click', function() {
                const selectedPubkeys = $('input[name="pubkey-checkbox"]:checked').map(function() {
                    return $(this).val();
                }).get();
                console.log('Debug: Selected pubkeys for comparison:', selectedPubkeys);
                if (selectedPubkeys.length > 0) {
                    fetchData(selectedPubkeys);
                    // Update the URL with the selected pubkeys
                    const newUrl = new URL(window.location.href);
                    newUrl.searchParams.set('pubkeys', selectedPubkeys.join(','));
                    window.history.replaceState({}, '', newUrl.toString());

                    // Update the selection counter
                    $('#selection-counter').text(`(${selectedPubkeys.length} selected)`);
                } else {
                    // Reset the selection counter
                    $('#selection-counter').text('');
                }
            });

            // Update selection counter when checkboxes are clicked
            $('.available-pubkeys-table').on('click', 'input[type="checkbox"]', function() {
                updateSelectionCounter();
            });

            // Jump to "Compare Selection" section
            $('#jump-to-selection').on('click', function() {
                $('html, body').animate({
                    scrollTop: $('.available-pubkeys-table').offset().top
                }, 'slow');
            });

        });
    </script>
</body>
